<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/single_ticket_linear_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <ImageView
            android:id="@+id/single_ticket_image_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            tools:src="@drawable/ic_baseline_login_24" />

        <TextView
            android:id="@+id/singe_ticket_text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textColor="#778899"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/single_ticket_linear_view2"
        android:layout_width="141dp"
        android:layout_height="285dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_ticket_linear_view1"
        app:layout_constraintVertical_bias="0.158">

        <TextView
            android:id="@+id/ticket_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Ticket Type"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/priority_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Ticket Priority"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/estimation_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Estimation"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/logged_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Logged time"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Ticket desc."
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:text="Edit"
        android:textColor="#00FF33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_ticket_linear_view2"
        app:layout_constraintVertical_bias="0.912" />

    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="284dp"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.523">


        <TextView
            android:id="@+id/ticket_type_holder_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Enhancement"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/priority_holder_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Highest"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/estimation_holder_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/logged_time_holder_tv"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/description_content_tv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="fkeeg vcvwe hter sdf qwd,mds"
        android:textColor="#808080"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />


</androidx.constraintlayout.widget.ConstraintLayout>